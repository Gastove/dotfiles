#!/bin/bash

run_pip() {

    local -a desired_pip_packages=(
        'virtualenv'
        'httpie'
        'pygments'
        'pygments-style-solarized'
    )

    for index in ${!desired_pip_packages[*]}
    do
        if [ pip list | grep "${desired_pip_packages[index]}"]; then
            pip install ${desired_pip_packages[index]}
        fi
    done

    unset desired_pip_packages

}
